!!! 5
%html{:lang =>"en"}
  %head
    %meta{:charset => "utf8"}
    %title= content_for?(:title) ? yield(:title) : "在线商店"
    = csrf_meta_tags

    / Le HTML5 shim for IE6-8 support of HTML elements
    = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    /[if lt IE9]
    /Le styles
    = stylesheet_link_tag "application",:media => "all"
    = javascript_include_tag "application"
    = yield :head
    :css
      body{
        padding-top: 60px;
        padding-bottom: 40px;
      }

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a{:class =>"btn btn-navbar",:'data-toggle'=>"collapse",:'data-target'=>".nav-collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

          %a{:class=> "brand",:href => "/"} 红酒网

          .nav-collapse
            %ul.nav
              %li.active
                %a{:href => "/"} Home
              %li
                %a{:href =>"/tour"} Tour
              %li
                %a{:href =>"/about"} About

            %ul.nav.pull-right
              %li
                %a{:href => "#link"} Link
              %li
                %a{:href => "/signup",:title => "Log in to Store"} Sign up

    .container-fluid
      = yield
    %footer
      %p
        &copy; Company 2012
